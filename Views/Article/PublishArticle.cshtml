@model animal_shelter_app.Models.ViewModels.AddArticleViewModel

@{
    ViewData["Title"] = "Publish New Article";
}

<div class="container mt-4">
    <h2 class="mb-4 fw-semibold">Publish New Article</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-light text-dark">
            <h5 class="card-title mb-0"><i class="bi bi-pencil-square me-1"></i> Article Details</h5>
        </div>
        <div class="card-body">
            <form asp-controller="Article" asp-action="PublishArticle" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="BlogTitle" class="form-label fw-bold"></label>
                    <input asp-for="BlogTitle" class="form-control" placeholder="Enter article title" />
                    <span asp-validation-for="BlogTitle" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="BlogContent" class="form-label fw-bold"></label>
                    <textarea asp-for="BlogContent" class="form-control" rows="5" placeholder="Enter article content"></textarea>
                    <span asp-validation-for="BlogContent" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageFile" class="form-label fw-bold"></label>
                    <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                    <small class="form-text text-muted">Upload an image for the article (optional).</small>
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="BlogUrl" class="form-label fw-bold"></label>
                    <input asp-for="BlogUrl" class="form-control" placeholder="Enter a URL for the article (optional)" />
                    <small class="form-text text-muted">If this article links to an external resource.</small>
                    <span asp-validation-for="BlogUrl" class="text-danger"></span>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-upload me-1"></i> Publish Article</button>
                    <a asp-controller="Account" asp-action="AdminPage" class="btn btn-secondary ms-2"><i class="bi bi-arrow-left me-1"></i> Back to Dashboard</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}