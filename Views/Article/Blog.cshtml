@model IEnumerable<animal_shelter_app.Models.ArticleInformations>

@{
    Layout = "_Layout";
}

<!-- CSS Stilleri -->
<style>
    body {
        background-color: #FAFAFA; /* Kırık beyaz ton */
    }

    html, body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        overflow-x: hidden;
    }

    .blog-header {
        position: relative;
        width: 100vw;
        left: 50%;
        right: 50%;
        margin-left: -50vw;
        margin-right: -50vw;
        height: 600px;
        background-image: url('/images/blog_header.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        display: flex;
        justify-content: flex-end; /* Sağa yaslama */
        align-items: center;
        padding-right: 10vw; /* Görselle uyumlu şekilde içeri alma */
        box-sizing: border-box;
    }

        .blog-header .header-text h1 {
            color: white;
            font-size: 48px;
            font-weight: bold;
            text-align: right; /* Metin hizasını sağa al */
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);
            line-height: 1.2;
        }

    .card {
        background-color: white;
        color: black;
        border-radius: 8px;
        height: 350px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        position: relative;
        overflow: hidden;
        transition: transform 0.2s ease-in-out, background-color 0.3s ease, color 0.3s ease;
        z-index: 1;
    }

        .card:hover {
            transform: scale(1.02);
        }

    .card-title {
        font-size: 25px;
        font-weight: bold;
        height: 60px;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        margin-bottom: 10px;
        position: relative;
        z-index: 2;
    }

    .card-divider {
        height: 6px;
        margin: 0 auto 15px auto;
        width: 100%;
        background-color: black;
        border-radius: 4px;
    }

    .card-text {
        color: black;
        height: 120px;
        overflow: hidden;
    }

    .card:hover {
        color: white;
    }

    .card .btn-primary {
        background-color: #7de0ea;
        border-color: #7de0ea;
        transition: background-color 0.3s ease;
        position: absolute;
        bottom: 15px;
        left: 50%;
        transform: translateX(-50%);
    }

    .card:hover .btn-primary {
        background-color: #00aabf;
        border-color: #00aabf;
    }

    .row {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    .col-md-4 {
        width: 32%;
        margin-bottom: 30px;
    }

    /* Çeyrek çember görünümü */
    .card::before {
        content: "";
        position: absolute;
        top: 0;
        right: 0;
        width: 60px;
        height: 60px;
        border-bottom-left-radius: 100%;
        transition: background-color 0.3s ease;
        z-index: 0;
    }

    /* Çeyrek çember görünümü */
    .card-1::before {
        background-color: #4bdfee;
    }

    .card-2::before {
        background-color: #ee4bd8;
    }

    .card-3::before {
        background-color: #2ff132;
    }

    .card-4::before {
        background-color: #f1642f;
    }

    /* Hover durumunda çeyrek daireyi doğru renge ayarlama */
    .card-1:hover::before {
        background-color: #218792;
    }

    .card-2:hover::before {
        background-color: #821a74;
    }

    .card-3:hover::before {
        background-color: #158117;
    }

    .card-4:hover::before {
        background-color: #862805;
    }

    /* Kart hover renkleri */
    .card-1:hover {
        background-color: #4bdfee;
    }

    .card-2:hover {
        background-color: #ee4bd8;
    }

    .card-3:hover {
        background-color: #2ff132;
    }

    .card-4:hover {
        background-color: #f1642f;
    }

    /* Divider çizgi renkleri */
    .card-1 .card-divider {
        background-color: #4bdfee;
    }

    .card-2 .card-divider {
        background-color: #ee4bd8;
    }

    .card-3 .card-divider {
        background-color: #2ff132;
    }

    .card-4 .card-divider {
        background-color: #f1642f;
    }

    /* Hover sırasında divider renk değişimi */
    .card-1:hover .card-divider {
        background-color: #218792;
    }

    .card-2:hover .card-divider {
        background-color: #821a74;
    }

    .card-3:hover .card-divider {
        background-color: #158117;
    }

    .card-4:hover .card-divider {
        background-color: #862805;
    }

    /* Buton renkleri */
    .card-1 .btn-primary {
        background-color: #4bdfee;
        border-color: #4bdfee;
    }

    .card-2 .btn-primary {
        background-color: #ee4bd8;
        border-color: #ee4bd8;
    }

    .card-3 .btn-primary {
        background-color: #2ff132;
        border-color: #2ff132;
    }

    .card-4 .btn-primary {
        background-color: #f1642f;
        border-color: #f1642f;
    }

    /* Hover buton renkleri */
    .card-1:hover .btn-primary {
        background-color: #218792;
        border-color: #218792;
    }

    .card-2:hover .btn-primary {
        background-color: #821a74;
        border-color: #821a74;
    }

    .card-3:hover .btn-primary {
        background-color: #158117;
        border-color: #158117;
    }

    .card-4:hover .btn-primary {
        background-color: #862805;
        border-color: #862805;
    }




    /* Media Queries */
    @@media (max-width: 767px) {
        .blog-header h1 {
            font-size: 32px;
        }

        .col-md-4 {
            width: 48%;
        }
    }

    @@media (max-width: 479px) {
        .col-md-4 {
            width: 100%;
        }
    }
</style>

<!-- HEADER -->
<header class="blog-header">
    <div class="header-text">
        <h1>
            Everything About Pets:<br>
            Health, Care, and Training
        </h1>
    </div>
</header>



<!-- MAKALELER -->
<div class="container my-5">
    <div class="row">
        @if (Model != null && Model.Any())
        {
            int cardIndex = 0;
            foreach (var article in Model)
            {
                cardIndex++;
                var cardClass = $"card card-{cardIndex % 4 + 1}"; // Dinamik sınıf: card-1, card-2, card-3, card-4

                <div class="col-md-4 mb-4">
                    <div class="@cardClass">
                        <div class="card-body">
                            <h4 class="card-title">@article.BlogTitle</h4>
                            <div class="card-divider"></div>
                            <p class="card-text">
                                @if (article.BlogContent != null && article.BlogContent.Length > 150)
                                {
                                    @(article.BlogContent.Substring(0, 500) + "...")
                                }
                                else
                                {
                                    @(article.BlogContent ?? "No content available.")
                                }
                            </p>
                            <div class="mt-3 text-center">
                                <a href="@Url.Action("Details", "Blog", new { id = article.ArticleId })" class="btn btn-primary">Read More</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No articles available.</p>
        }
    </div>
</div>