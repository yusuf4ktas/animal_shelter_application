@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h2 class="mt-4 text-center" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">


       <!--Bu kısımda fotoğrafın gözüküp gözükmediğine dair deneme html oluşturmaya çalıştım. 
       Henüz bir resim kısmımız olmadığı için hayvan bulunamadı diyor. --> 
       
        @model List<AnimalInformation>

        @if (Model != null && Model.Any())
        {
            foreach (var animal in Model)
            {
                if (animal != null)
                {
                    <h3>@(animal.AnimalImage.ToString() ?? "Bilinmiyor") (@(animal.Species ?? "Tür belirtilmemiş"))</h3>
                    @if (!string.IsNullOrEmpty(animal.AnimalImage))
                    {
                        <img src="@animal.AnimalImage" alt="@animal.AnimalImage" width="200" height="200" />
                    }
                    else
                    {
                        <p>Resim yok</p>
                    }
                }
                else
                {
                    <p>Geçersiz hayvan verisi.</p>
                }
            }
        }
        else
        {
            <p>Hayvan bulunamadı.</p>
        }

    </h2>
</div>
